    description="create JAR file encompassing several LOCI tools">
    <for list="${loci-tools.libraries}" param="jar" delimiter=" " trim="true">
      <sequential>
        <unjar src="${shared-artifact.dir}/@{jar}" dest="${loci-tools.dir}">
          <patternset>
