<suite name="BioFormats Unit Tests">
    <test name="ServiceTests">
        <groups/>
        <classes>
            <class name="loci.formats.utests.JAIIIOServiceTest"/>
            <class name="loci.formats.utests.LuraWaveServiceTest"/>
            <class name="loci.formats.utests.MDBServiceTest"/>
            <class name="loci.formats.utests.NetCDFServiceTest"/>
            <class name="loci.formats.utests.POIServiceTest"/>
        </classes>
        <packages>
            <package name="loci.formats.utests.xml"/>
        </packages>
    </test>
    <test name="ServiceFactory">
        <groups/>
        <classes>
            <class name="loci.formats.utests.ServiceFactoryTest"/>
        </classes>
        <packages/>
    </test>
    <test name="TIFFTests">
        <groups>
            <run>
                <exclude name="tiffParserTests"/>
            </run>
        </groups>
        <classes/>
        <packages>
            <package name="loci.formats.utests.tiff"/>
        </packages>
    </test>
    <test name="BaseTIFFParserTest">
        <parameter name="mockClassName"
                   value="loci.formats.utests.tiff.BaseTiffMock"/>
        <classes>
            <class name="loci.formats.utests.tiff.TiffParserTest"/>
        </classes>
    </test>
    <test name="RGBTIFFParserTest">
        <parameter name="mockClassName"
                   value="loci.formats.utests.tiff.RGBTiffMock"/>
        <classes>
            <class name="loci.formats.utests.tiff.TiffParserTest"/>
        </classes>
    </test>
    <test name="2010-04SchemaModelObjects">
        <groups>
            <run>
                <exclude name="disabled"/>
            </run>
        </groups>
        <parameter name="mockClassName"
                   value="loci.formats.utests.ObjectBasedOMEModelMock"/>
        <classes>
            <class name="loci.formats.utests.InOut201004Test"/>
        </classes>
    </test>
    <test name="2010-04SchemaIMetadata">
        <groups>
            <run>
                <exclude name="disabled"/>
            </run>
        </groups>
        <parameter name="mockClassName"
                   value="loci.formats.utests.IMetadataBasedOMEModelMock"/>
        <classes>
            <class name="loci.formats.utests.InOut201004Test"/>
        </classes>
    </test>
    <test name="ChannelColor">
      <groups/>
      <classes>
        <class name="loci.formats.utests.ChannelColorTest"/>
      </classes>
    </test>
    <test name="ReaderWrapper">
      <groups/>
      <classes>
        <class name="loci.formats.utests.WrapperTest"/>
      </classes>
    </test>
    <test name="ModelMockReader">
      <groups/>
      <classes>
        <class name="loci.formats.utests.SPWModelReaderTest"/>
        <class name="loci.formats.utests.BaseModelReaderTest"/>
        <class name="loci.formats.utests.BaseModelNoBinDataReaderTest"/>
        <class name="loci.formats.utests.PumpWithLightSourceSettingsTest"/>
      </classes>
    </test>
    <test name="XMLAnnotation">
      <groups/>
      <classes>
        <class name="loci.formats.utests.XMLAnnotationTest"/>
      </classes>
    </test>
    <test name="ScreenReader">
      <groups/>
      <classes>
        <class name="loci.formats.utests.ScreenDetectionTest"/>
      </classes>
    </test>
    <test name="IsThisType">
      <groups/>
      <classes>
        <class name="loci.formats.utests.IsThisTypeTests"/>
      </classes>
    </test>
</suite>
