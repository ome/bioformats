<!--
build.xml

Ant build file for Bio-Formats LOCI tools bundle.
Download Apache Ant from http://ant.apache.org/.
Type "ant -p" for a list of targets.
-->

<project name="loci-tools" default="jar" basedir=".">
  <description>Build file for LOCI Tools bundle</description>
  <property name="root.dir" location="../../.."/>
  <import file="${root.dir}/ant/java.xml"/>
  <property file="build.properties"/>

  <target name="jar" depends="mvn-init" description="create bundle JAR">
    <jar destfile="${loci-tools.jar}" filesetmanifest="skip">
      <zipgroupfileset refid="compile.fileset"/>
      <manifest>
        <attribute name="Main-Class" value="${loci-tools.main}"/>
      </manifest>
    </jar>        
  </target>
</project>
