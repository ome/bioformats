<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bfmatlab</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../../formats-gpl/matlab</directory>
      <outputDirectory>bfmatlab-${project.version}/</outputDirectory>
      <includes>
        <include>**/*.m</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>../../../docs/sphinx/about/whats-new.rst</source>
      <outputDirectory>bfmatlab-${project.version}/</outputDirectory>
      <destName>NEWS.rst</destName>
    </file>
    <file>
      <source>target/bioformats_package-${project.version}.jar</source>
      <outputDirectory>bfmatlab-${project.version}/</outputDirectory>
      <destName>bioformats_package.jar</destName>
    </file>
  </files>
</assembly>
