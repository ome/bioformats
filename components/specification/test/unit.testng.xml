<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >

<suite name="Specification.unit" time-out="30000">

  <test name="Specification.unit.active">
    <groups>
      <run>
        <exclude name="broken"/>
        <exclude name="ignore"/>
        <exclude name="integration"/>
      </run>
    </groups>
    <packages>
      <package name="spec.*"/>
    </packages>
  </test>

</suite>
